#include <sys/stat.h>

getFileSize(const char *filename){
int fileSize = 0;
struct stat fileStats; //holds stats about the file
	if (stat (filename, &fileStats) == -1) printf("ERROR: Unable to locate stats for specified file\n" );
	else fileSize = fileStats.st_size; //retrives size stat from buffer holding file stats

	return fileSize;
}
